<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<h1 class="mb-3">All Campgrounds</h1>
<% for (let campground of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (campground.images.length) { %>
      <img class="img-fluid" alt="" src="<%= campground.images[0].url %>" />
      <% } else { %>
      <img
        class="img-fluid"
        alt=""
        src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/No_image_3x4.svg/1024px-No_image_3x4.svg.png"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= campground.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">
          View <%= campground.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mbxToken = '<%- process.env.MAPBOX_TOKEN %>'
  // prettier-ignore
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %> } // TURN OFF any autoformatter on this line
</script>

<script src="/js/cluster-map.js"></script>
